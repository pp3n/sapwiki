%h1= @article.title
%p= @article.content
%p= @article.prepared_by

.btn-group
	= link_to "Back", root_path, class: "btn btn-default btn-lg"
	- if user_signed_in?
		= link_to "Edit", edit_article_path(@article), class: "btn btn-success btn-lg"
		= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-lg"